@{
}
@model List<BasicCrudMVC.Models.Entity.Product>

<div class="card shadow-lg">
    <div class="card-header bg-secondary text-white text-center">
        <h3>Product Table</h3>
    </div>
    <div class="d-flex justify-content-end m-2" >
    <a asp-controller="Product" asp-action="Create" class="btn btn-primary float-end ">Add Product</a>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
               
                @foreach( var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Price</td>
                        <td>@product.Stock</td>
                        <td >
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-info">Edit</a> 
                            |
                            <form asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" method="post" class=" d-inline">
                                <input type="submit" class="btn btn-danger" value="Delete"/>
                            </form>
                        </td>
                    </tr>
                    
                }


            </tbody>
        </table>
    </div>
    </div>
